// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id          String @id @default(uuid())
  firstName   String
  lastName    String
  email       String @unique
  address     String
  facture     Facture[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime?
}

model Facture {
  id            String @id @default(uuid())
  client        Client @relation(fields: [clientId], references: [id]) 
  clientId      String
  companyName   String
  total         String
  title         String
  description   String
  pdf           String @default("")
  createdAt     DateTime @default(now())
  updatedAt     DateTime?
}

